{
  "name": "firealert-mobile-app",
  "version": "1.0.0",
  "main": "expo/AppEntry.js",
  "scripts": {
    "start": "expo start",
    "start:dev": "expo start --dev-client",
    "android": "expo run:android",
    "android:auto": "powershell -NoProfile -ExecutionPolicy Bypass -File ./scripts/start-android.ps1",
    "ios": "expo run:ios",
    "web": "expo start --web",
    "web:clear": "expo start --web --clear",
    "web:export": "expo export --platform web",
    "web:serve": "npx serve -s dist -l 8080",
    "ports:free": "npx kill-port 8081 19000 19006",
    "build:android": "eas build --platform android",
    "build:ios": "eas build --platform ios",
    "build:web": "expo export --platform web",
    "lint": "eslint .",
    "type-check": "tsc --noEmit",
    "generate:api-types": "node scripts/generate-types.js",
    "generate:openapi": "cd backend && npm run start:dev & sleep 10 && node ../scripts/generate-types.js && kill %1",
    "types:check": "tsc --noEmit",
    "types:generate": "npm run generate:api-types",
    "test": "jest",
    "test:unit": "jest --passWithNoTests --coverage",
    "test:integration": "jest --passWithNoTests --coverage",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "detox test",
    "build:e2e": "detox build",
    "backend:start": "cd backend && npm run start:dev",
    "backend:types": "cd backend && npm run generate:openapi",
    "clean": "expo r -c && rm -rf node_modules && npm install",
    "perf:test": "node scripts/performance-test.js",
    "perf:optimize": "node scripts/performance-optimize.js",
    "bundle:analyze": "npx expo export --dev && du -sh dist/",
    "pre-deploy:check": "node scripts/pre-deploy-check.js",
    "docs:check": "node scripts/check-docs-links.js && node scripts/validate-docs-commands.js",
    "deploy:build": "node scripts/deploy.js build",
    "deploy:submit": "node scripts/deploy.js submit",
    "deploy:production": "node scripts/deploy.js deploy production all --update-version",
    "deploy:preview": "node scripts/deploy.js deploy preview all",
    "deploy:ios": "node scripts/deploy.js deploy production ios --auto-submit",
    "deploy:android": "node scripts/deploy.js deploy production android --auto-submit",
    "version:patch": "node scripts/deploy.js version patch",
    "version:minor": "node scripts/deploy.js version minor",
    "version:major": "node scripts/deploy.js version major",
    "ci:check": "npm run lint && npm run type-check && npm run docs:check && npm run pre-deploy:check && npm run test || true",
    "monitor:dashboard": "echo 'Monitoring dashboard available in development mode'",
    "monitor:test": "node -e 'console.log(\"Testing monitoring services...\")'",
    "analytics:flush": "node -e 'require(\"./src/services/analytics\").analytics.flush()'",
    "sentry:upload": "npx @sentry/cli releases files upload-sourcemaps .",
    "postinstall": "npx patch-package"
  },
  "dependencies": {
    "@expo/metro-runtime": "~5.0.4",
    "@expo/vector-icons": "^14.0.4",
    "@hookform/resolvers": "^3.9.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/schedule": "^6.0.0",
    "@nestjs/throttler": "^6.4.0",
    "@react-native-async-storage/async-storage": "^2.2.0",
    "@react-native-community/netinfo": "^11.4.1",
    "@react-navigation/bottom-tabs": "^7.1.6",
    "@react-navigation/native": "^7.1.16",
    "@react-navigation/native-stack": "^7.3.25",
    "@react-navigation/stack": "^7.4.4",
    "@reduxjs/toolkit": "^2.8.2",
    "@sentry/react-native": "~6.14.0",
    "@supabase/supabase-js": "^2.49.1",
    "@types/supercluster": "^7.1.3",
    "axios": "^1.7.9",
    "date-fns": "^4.1.0",
    "expo": "~53.0.20",
    "expo-application": "~6.1.5",
    "expo-auth-session": "~6.2.1",
    "expo-battery": "~9.1.4",
    "expo-camera": "~16.1.11",
    "expo-constants": "^17.1.7",
    "expo-device": "~7.1.4",
    "expo-image-manipulator": "~13.1.7",
    "expo-image-picker": "^16.1.4",
    "expo-local-authentication": "^16.0.5",
    "expo-location": "~18.1.6",
    "expo-notifications": "~0.31.4",
    "expo-secure-store": "~14.2.3",
    "expo-status-bar": "~2.2.3",
    "helmet": "^8.1.0",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "react-hook-form": "^7.54.2",
    "react-native": "0.79.5",
    "react-native-gesture-handler": "~2.24.0",
    "react-native-maps": "1.20.1",
    "react-native-paper": "^5.14.5",
    "react-native-reanimated": "~3.17.4",
    "react-native-safe-area-context": "5.4.0",
    "react-native-screens": "~4.11.1",
    "react-native-web": "^0.20.0",
    "react-redux": "^9.2.0",
    "redux-persist": "^6.0.0",
    "supercluster": "^8.0.1",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@rtk-query/codegen-openapi": "^2.0.0",
    "@testing-library/jest-native": "^5.4.3",
    "@testing-library/react-native": "^12.5.0",
    "@types/jest": "^29.5.12",
    "@types/react": "~19.0.10",
    "@types/react-native": "^0.73.0",
    "@typescript-eslint/eslint-plugin": "^8.24.1",
    "@typescript-eslint/parser": "^8.24.1",
    "base64-arraybuffer": "^1.0.2",
    "detox": "^20.20.3",
    "eslint": "^8.57.1",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-native": "^4.1.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "fast-glob": "^3.3.3",
    "globals": "^16.3.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.0.5",
    "jest-expo": "~53.0.2",
    "openapi-typescript": "^7.9.1",
    "react-test-renderer": "19.0.0",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.40.0"
  },
  "resolutions": {
    "react": "19.0.0",
    "react-dom": "19.0.0"
  },
  "private": true
}
